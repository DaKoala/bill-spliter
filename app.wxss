/**app.wxss**/
@import "assets/wxss/weui.wxss";

page{
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft{
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}

.weui-cell {
  border-top: 1rpx solid #e5e5e5;
}

.weui-cell:last-child {
  border-bottom: 1rpx solid #e5e5e5;
}

.weui-cell__no-border {
  border: 0;
}