/**index.wxss**/
.container {
    padding-bottom: 30rpx;
}

.section {
    background: #ffffff;
}

.margin-title {
    margin-top: 2em;
}

.money-title {
    font-size: 42rpx;
    font-weight: bold;
}

.money-sum {
    font-size: 42rpx;
    color: #09bb07;
}

.modal {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;

    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.6);
}

.modal-body {
    width: 80%;
    border-radius: 6rpx;
    background: #f8f8f8;
}

.modal-cell__input {
    display: flex;
    padding: 20rpx 50rpx;
}

.modal-cell__left {
    box-sizing: border-box;
    width: 40%;
}

.modal-cell__right {
    box-sizing: border-box;
    width: 60%;
}

.modal-input {
    border-bottom: 1rpx solid #d8d8d8;
}

.modal-footer {
    margin-top: 30rpx;
    position: relative;
    line-height: 96rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-top: 1rpx solid #d5d5d6;
}

.modal-title {
    display: flex;
    justify-content: center;
    font-weight: bold;
    font-size: 48rpx;
}

.modal-label {
    color: #888888;
}

.modal-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    font-weight: bold;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    color: #09BB07;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}

.modal-btn:nth-child(2) {
    border-left: 1rpx solid #d5d5d6;
}

.modal-btn_primary {
    color: #09BB07;
}

.modal-btn_default {
    color: #353535;
}

.modal-btn_disable {
    color: #d6d6d6;
    font-weight: normal;
}

.result {
    border-top: 1rpx solid #d5d5d6;
    border-bottom: 1rpx solid #d5d5d6;
}

.result-title-wrapper {
    border-bottom: 1rpx solid #d5d5d6;
}

.result-title {
    font-size: 42rpx;
    font-weight: bold;
}
